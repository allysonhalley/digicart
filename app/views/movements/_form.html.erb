<%= form_with(model: movement, local: true) do |form| %>
  <% if movement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

      <ul>
      <% movement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :datetime %>
    <%= form.datetime_select :datetime, id: :movement_datetime %>
  </div>

  <div class="field">
    <%= form.label :id_item %>
    <%= form.select(:id_item, options_for_select(Item.all.collect {|f|[f.name]})) %>
  </div>

  <div class="field">
    <%= form.label :id_status %>
    <%= form.select(:id_status, options_for_select(Status.all.collect {|f|[f.name]})) %>
  </div>

  <div class="field">
    <%= form.label :id_sector %>
    <%= form.select(:id_sector, options_for_select(Sector.all.collect {|f|[f.name]})) %>
  </div>

  <div class="field">
    <%= form.label :id_floor %>
    <%= form.select(:id_floor, options_for_select(Floor.all.collect {|f|[f.name]})) %>
  </div>

  <div class="field">
    <%= form.label :item_price %>
    <%= form.text_field :item_price, id: :movement_item_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
