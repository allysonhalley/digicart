<%= form_with(model: movement, local: true) do |form| %>
  <% if movement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

      <ul>
      <% movement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :datetime %>
    <%= form.datetime_select :datetime, id: :movement_datetime %>
  </div>

  <div class="field">
    <%= form.label :item_id %>
    <%= form.select(:item_id, options_for_select(Item.all.collect {|f|[f.name, f.id]})) %>
  </div>

  <div class="field">
    <%= form.label :status_id %>
    <%= form.select(:status_id, options_for_select(Status.all.collect {|f|[f.name, f.id]})) %>
  </div>

  <div class="field">
    <%= form.label :sector_id %>
    <%= form.select(:sector_id, options_for_select(Sector.all.collect {|f|[f.name, f.id]})) %>
  </div>

  <div class="field">
    <%= form.label :floor_id %>
    <%= form.select(:floor_id, options_for_select(Floor.all.collect {|f|[f.name, f.id]})) %>
  </div>

  <div class="field">
    <%= form.label :item_price %>
    <%= form.text_field :item_price, id: :movement_item_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
