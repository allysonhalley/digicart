<p id="notice"><%= notice %></p>

<h1>Movements</h1>
<div class="col-xs-12">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Datetime</th>
            <th>Type</th>
            <th>Id item</TH>
            <th>TAG</TH>
            <th>Id status</th>
            <th>Id sector</th>
            <th>Item price</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @movements.each do |movement| %>
            <tr>
              <td><%= movement.datetime.strftime('%d/%m/%Y %T') %></td>
              <td><%= movement.type.name %></td>
              <td><%= movement.item.name %></td>
              <td><%= movement.item.bar_code %></td>
              <td><%= movement.status.name %></td>
              <td><%= movement.sector.name %></td>
              <td><%= movement.item_price %></td>
              <td><%= link_to 'Show', movement %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
