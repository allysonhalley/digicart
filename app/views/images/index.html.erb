<p id="notice"><%= notice %></p>

<h1>Images</h1>

<div class="col-xs-12">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td><%= image.url %></td>
              <td><%= link_to 'Show', image, class:'btn btn-default' %></td>
              <td><%= link_to 'Edit', edit_image_path(image) %></td>
              <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'New Image', new_image_path, class: 'btn btn-default' %>
</div>
