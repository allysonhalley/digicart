<p id="notice"><%= notice %></p>

<div class="col-xs-12">
  <div class="box">
    <div class="box-header">
      <h1>Floors</h1>
    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Describe</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @floors.each do |floor| %>
            <tr>
              <td><%= floor.name %></td>
              <td><%= floor.describe %></td>
              <td><%= link_to 'Show', floor %></td>
              <td><%= link_to 'Edit', edit_floor_path(floor) %></td>
              <td><%= link_to 'Destroy', floor, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to "'New Floor", new_floor_path, class: "btn btn-default" %>
</div>