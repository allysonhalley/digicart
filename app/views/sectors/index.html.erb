<p id="notice"><%= notice %></p>

<h1>Sectors</h1>

<div class="col-xs-12">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Alias</th>
          <th>Describe</th>
          <th>Floor</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @sectors.each do |sector| %>
            <tr>
              <td><%= sector.name %></td>
              <td><%= sector.alias %></td>
              <td><%= sector.describe %></td>
              <td><%= sector.floor.name %></td>
              <td><%= link_to 'Show', sector %></td>
              <td><%= link_to 'Edit', edit_sector_path(sector) %></td>
              <td><%= link_to 'Destroy', sector, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'New Sector', new_sector_path, class: 'btn btn-default' %>
</div>
