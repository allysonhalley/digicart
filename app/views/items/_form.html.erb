<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :alias %>
    <%= form.text_field :alias, id: :item_alias %>
  </div>

  <div class="field">
    <%= form.label :describe %>
    <%= form.text_area :describe, id: :item_describe %>
  </div>

  <div class="field">
    <%= form.label :bar_code %>
    <%= form.text_field :bar_code, id: :item_bar_code %>
  </div>

  <div class="field">
    <%= form.label :status_id %>
    <%= form.select(:status_id, options_for_select(Status.all.collect {|f|[f.name, f.id]}, selected: @item.status_id)) %>
  </div>

  <div class="field">
    <%= form.label :sector_id %>
    <%= form.select(:sector_id, options_for_select(Sector.all.collect {|f|[f.name, f.id]}, selected: @item.sector_id)) %>
  </div>

  <div class="field">
    <%= form.label :type_id %>
    <%= form.select(:type_id, options_for_select(Type.all.collect {|f|[f.name, f.id]}, selected: @item.type_id)) %>
  </div>

  <div class="field">
    <%= form.label :image_id %>
    <%= form.select(:image_id, options_for_select(Image.all.collect {|f|[f.url, f.id]}, selected: @item.image_id)) %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :item_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
