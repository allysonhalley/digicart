<p id="notice"><%= notice %></p>

<h1>Items</h1>

<div class="col-xs-12">
  <div class="box">
    <!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Alias</th>
            <th>Describe</th>
            <th>Bar code</th>
            <th>Status</th>
            <th>Sector</th>
            <th>Type</th>
            <th>Image</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.alias %></td>
              <td><%= item.describe %></td>
              <td><%= item.bar_code %></td>
              <td><%= item.status.name %></td>
              <td><%= item.sector.name %></td>
              <td><%= item.type.name %></td>
              <td><%= item.image.url %></td>
              <td><%= item.price %></td>
              <td><%= link_to 'Show', item %></td>
              <td><%= link_to 'Edit', edit_item_path(item)%></td>
              <td>
                <%= button_to "Move", to_move_path, class:"btn btn-default", style:"", method: :post, remote: true, params: { item_id: item.bar_code } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>

<%= link_to 'New Item', new_item_path %>